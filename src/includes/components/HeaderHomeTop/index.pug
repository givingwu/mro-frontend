- var loginStatus = false
- var hotWords = [1, 2, 3, 4, 5, 6, 7]
- var cartBadge = 5
.head-top
  .container.head-top-bd
    .head-top-logo
      h1
        a(href="//www.yzw.cn").head-top-logo-bd
          | 云筑网
    .head-top-search
      .search-wrap
        .search-bd
          .search-triggers
            ul.J_SearchTab.search-switchable
              li(data-type=1).search-triggers-tab.search-tab-mro.selected MRO
              li(data-type=2).search-triggers-tab.search-tab-work 办公用品
          .search-panel.J_SearchPanel
            form(action="//s.yzw.cn/search", target="_top", name="search")#J_SearchForm
              .search-button-wrap
                button(type="submit").search-button 搜索
              .search-panel-fields
                .search-combobox
                  input(
                    name="q",
                    type="text",
                    placeholder="请搜索商品名称、品牌型号、商品属性、副标题"
                    aria-label="请输入搜索文字",
                    autofocus,
                    autocomplete="off",
                    aria-haspopup="true",
                    aria-combobox="list",
                    role="combobox",
                    tabindex="0"
                  )
              input(type="hidden" name="t" value="1")
        .search-ft
          .search-hots
            .search-hots-word
              for word in hotWords
                a(href="javascript:void(0);;") 搜索词#{word}
    .head-top-button
        a(href="/shoppingCart")
          button.head-top-button-item.head-top-button__cart 我的购物车
            if cartBadge
              span.head-top-button__cart--badge #{cartBadge}
        if !loginStatus
          a(href="/login")
            button.head-top-button-item.head-top-button__login
              | 登录

